<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <PlatformTarget>ARM64</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <PlatformTarget>ARM64</PlatformTarget>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="AssimpNetLatest" Version="5.0.0-beta1" />
      <PackageReference Include="OpenTK" Version="4.8.2" />
      <PackageReference Include="StbImageSharp" Version="2.27.13" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="ECS\Component.cs" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\cimgui.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\cimguizmo.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\cimnodes.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\cimplot.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\native\cimgui.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\native\cimguizmo.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\native\cimnodes.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\native\cimplot.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\native\libassimp.dylib" />
      <Content Include="bin\Debug\net8.0\runtimes\osx-arm64\native\libglfw.3.dylib" />
    </ItemGroup>

    <ItemGroup>
      <None Include="bin\Debug\net8.0\runtimes\osx-arm64\native\cimgui.dylib" />
    </ItemGroup>

</Project>
